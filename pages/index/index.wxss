/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.add_btn {
  width: 100%;
  position: fixed;
  bottom: 60rpx; /*底部按钮距离*/
}
.btn {
  margin-top: 30rpx;
  width: 450rpx;
  background: #14a1fd;
  color: #fff;
  border-radius: 70rpx;
}
.btn_hover {
  background-color: pink;
}

page {
  height: 100%;
}
.image_01 {
  display: flex;
  height: 35%;
  justify-content: center;
  align-items: center;
}
.image_01 image {
  width: 450rpx;
  height: 300rpx;
}

.error text {
  margin-left: 15rpx;
  font-size: 60rpx;
  color: red;
}
.success text {
  margin-left: 15rpx;
  font-size: 60rpx;
  color: green;
}

.error,
.success {
  margin-top: 300rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}
.info {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 35rpx;
  color: green;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
